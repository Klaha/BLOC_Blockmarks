<div class="row">
  <%= form_for topic, :html => {class: 'col s12 m8 offset-m2 l8 offset-l2'} do |f| %>
  <h4 class="center-align">New topic:</h4>
    <div class="input-field">
      <%= f.label :title, "Title:" %>
      <%= f.text_field :title %>
    </div>
    <br>
    <div class="actions center-align">
      <button class="btn waves-effect waves-light" type="submit" name="action">Save Topic
        <i class="mdi-action-thumb-up right"></i>
      </button>
    </div>
  <% end %>
</div>